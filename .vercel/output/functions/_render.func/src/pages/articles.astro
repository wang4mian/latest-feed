                      article.editor_action === 'adopted' ? 'bg-green-100 text-green-800' :
                      article.editor_action === 'ignored' ? 'bg-red-100 text-red-800' :
                      article.editor_action === 'compiled' ? 'bg-purple-100 text-purple-800' :
                      'bg-gray-100 text-gray-800'
