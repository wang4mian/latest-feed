                  <span class={`px-2 py-1 rounded ${
                    article.status === 'processed' ? 'bg-green-100 text-green-800' :
                    article.status === 'new' ? 'bg-blue-100 text-blue-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {article.status}
                  </span>
