---
import Layout from '@/layouts/Layout.astro'
import { supabase } from '@/lib/supabase'

// 获取文章数据
const { data: articles } = await supabase
  .from('articles')
  .select('*')
  .order('created_at', { ascending: false })

// 获取RSS资源数据
const { data: rssResources } = await supabase
  .from('rss_sources')
  .select('*')
  .order('success_rate', { ascending: false })

// 计算统计指标
const totalArticles = articles?.length || 0
const processedArticles = articles?.filter(a => a.status === 'processed').length || 0
const compiledArticles = articles?.filter(a => a.editor_action === 'compiled').length || 0
const averageScore = articles?.length ? 
  (articles.reduce((sum, a) => {
    const score = a.ai_analysis?.value_score || 0
    return sum + score
  }, 0) / articles.length).toFixed(1) : '0'

// RSS源统计
const totalRssResources = rssResources?.length || 0
const activeRssResources = rssResources?.filter(r => r.is_active).length || 0
const healthRate = totalRssResources > 0 ? Math.round((activeRssResources / totalRssResources) * 100) : 0

// 按状态分组文章
const statusGroups = articles?.reduce((acc, article) => {
  acc[article.status] = (acc[article.status] || 0) + 1
  return acc
}, {} as Record<string, number>) || {}

// 最近7天的文章
const recent = articles?.filter(a => {
  const createdAt = new Date(a.created_at)
  const weekAgo = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000)
  return createdAt > weekAgo
}) || []

// 高价值文章（评分 >= 8）
const highValueArticles = articles?.filter(a => (a.ai_analysis?.value_score || 0) >= 8) || []

// RSS源分类统计
const rssCategories = rssResources?.reduce((acc, source) => {
  if (source.is_active) {
    acc[source.category] = (acc[source.category] || 0) + 1
  }
  return acc
}, {} as Record<string, number>) || {}
---

<Layout title="Dashboard - 制造业情报系统">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- 页面标题 -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">📊 系统仪表板</h1>
      <p class="mt-2 text-gray-600">制造业情报系统运营概览</p>
    </div>

    <!-- 核心指标卡片 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      
      <!-- 总文章数 -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-blue-100 rounded-lg">
            <span class="text-2xl">📰</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">总文章</p>
            <p class="text-3xl font-semibold text-gray-900">{totalArticles}</p>
          </div>
        </div>
      </div>
      
      <!-- 已处理文章 -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-green-100 rounded-lg">
            <span class="text-2xl">✅</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">已处理</p>
            <p class="text-3xl font-semibold text-gray-900">{processedArticles}</p>
          </div>
        </div>
      </div>
      
      <!-- 平均价值评分 -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-yellow-100 rounded-lg">
            <span class="text-2xl">⭐</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">平均评分</p>
            <p class="text-3xl font-semibold text-gray-900">{averageScore}</p>
          </div>
        </div>
      </div>
      
      <!-- RSS源健康度 -->
      <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center">
          <div class="p-3 bg-purple-100 rounded-lg">
            <span class="text-2xl">📡</span>
          </div>
          <div class="ml-4">
            <p class="text-sm font-medium text-gray-600">源健康度</p>
            <p class="text-3xl font-semibold text-gray-900">{healthRate}%</p>
            <p class="text-xs text-gray-500">{activeRssResources}/{totalRssResources}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- 图表和详细信息 -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      
      <!-- 文章状态分布 -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">📈 文章状态分布</h3>
        <div class="space-y-4">
          {Object.entries(statusGroups).map(([status, count]) => {
            const percentage = totalArticles > 0 ? Math.round((count / totalArticles) * 100) : 0
            const statusEmoji = {
              'new': '🆕',
              'processing': '⚡',
              'processed': '✅',
              'adopted': '👍',
              'ignored': '❌',
              'compiled': '📝',
              'published': '🚀'
            }[status] || '📄'
            
            return (
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <span class="mr-2">{statusEmoji}</span>
                  <span class="text-sm font-medium text-gray-700">{status}</span>
                </div>
                <div class="flex items-center">
                  <div class="w-32 bg-gray-200 rounded-full h-2 mr-2">
                    <div class="bg-blue-500 h-2 rounded-full" style={`width: ${percentage}%`}></div>
                  </div>
                  <span class="text-sm font-semibold text-gray-900 w-8">{count}</span>
                </div>
              </div>
            )
          })}
        </div>
      </div>

      <!-- RSS源状态 -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">📡 RSS源状态</h3>
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">总源数</span>
            <span class="font-semibold">{totalRssResources}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">激活源</span>
            <span class="font-semibold text-green-600">{activeRssResources}</span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">健康度</span>
            <span class={`font-semibold ${healthRate >= 80 ? 'text-green-600' : healthRate >= 60 ? 'text-yellow-600' : 'text-red-600'}`}>
              {healthRate}%
            </span>
          </div>
          
          <!-- 分类统计 -->
          <div class="mt-4 pt-4 border-t border-gray-200">
            <h4 class="text-sm font-medium text-gray-700 mb-2">分类分布</h4>
            {Object.entries(rssCategories).map(([category, count]) => (
              <div class="flex justify-between items-center py-1">
                <span class="text-xs text-gray-600">{category}</span>
                <span class="text-xs font-medium">{count}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

    <!-- 数据表格 -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
      
      <!-- 最新文章 -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">📰 最新文章</h3>
        <div class="space-y-3 max-h-96 overflow-y-auto">
          {recent.slice(0, 10).map(article => {
            const timeAgo = new Date(article.created_at).toLocaleDateString('zh-CN')
            const scoreColor = (article.ai_analysis?.value_score || 0) >= 8 ? 'text-green-600' : 
                             (article.ai_analysis?.value_score || 0) >= 6 ? 'text-yellow-600' : 'text-gray-600'
            
            return (
              <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    {article.raw_content?.title || article.source_url?.substring(0, 50) + '...' || '无标题'}
                  </p>
                  <div class="flex items-center mt-1 space-x-2">
                    <span class="text-xs text-gray-500">{timeAgo}</span>
                    <span class={`text-xs px-2 py-1 rounded ${
                      article.status === 'processed' ? 'bg-green-100 text-green-800' :
                      article.status === 'compiled' ? 'bg-blue-100 text-blue-800' :
                      'bg-gray-100 text-gray-800'
                    }`}>
                      {article.status}
                    </span>
                  </div>
                </div>
                <div class="ml-4 text-right">
                  <span class={`text-sm font-semibold ${scoreColor}`}>
                    {article.ai_analysis?.value_score ? `${article.ai_analysis.value_score}/10` : '-'}
                  </span>
                </div>
              </div>
            )
          })}
        </div>
      </div>

      <!-- RSS源列表 -->
      <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">📡 RSS源状态</h3>
        <div class="space-y-3 max-h-96 overflow-y-auto">
          {rssResources?.slice(0, 10).map(source => (
            <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900 truncate">
                  {source.name}
                </p>
                <div class="flex items-center mt-1 space-x-2">
                  <span class={`text-xs px-2 py-1 rounded ${
                    source.category === 'Technology' ? 'bg-blue-100 text-blue-800' :
                    source.category === 'Business' ? 'bg-green-100 text-green-800' :
                    'bg-purple-100 text-purple-800'
                  }`}>
                    {source.category}
                  </span>
                  <span class="text-xs text-gray-500">{source.region}</span>
                </div>
              </div>
              <div class="ml-4 text-right">
                <div class="flex items-center space-x-2">
                  <span class={`w-2 h-2 rounded-full ${source.is_active ? 'bg-green-500' : 'bg-red-500'}`}></span>
                  {source.success_rate && (
                    <span class="text-xs text-gray-500">{source.success_rate}%</span>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- 高价值文章 -->
    {highValueArticles.length > 0 && (
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">🏆 高价值文章 (≥8分)</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {highValueArticles.slice(0, 6).map(article => (
            <div class="p-4 border border-gray-200 rounded-lg hover:shadow-md transition-shadow">
              <h4 class="text-sm font-medium text-gray-900 mb-2 line-clamp-2">
                {article.raw_content?.title || '无标题'}
              </h4>
              <div class="flex items-center justify-between">
                <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">
                  {article.ai_analysis?.value_score}/10
                </span>
                <span class="text-xs text-gray-500">
                  {new Date(article.created_at).toLocaleDateString('zh-CN')}
                </span>
              </div>
              {article.ai_analysis?.target_audience && (
                <div class="mt-2">
                  <span class="text-xs text-gray-500">
                    {Array.isArray(article.ai_analysis.target_audience) ? article.ai_analysis.target_audience[0] : article.ai_analysis.target_audience}
                  </span>
                </div>
              )}
            </div>
          ))}
        </div>
      </div>
    )}

    <!-- 快速操作 -->
    <div class="bg-white rounded-lg shadow p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">🚀 快速操作</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        
        <a href="/workbench" class="block p-4 border border-gray-300 rounded-lg hover:border-blue-500 hover:shadow-md transition-all">
          <div class="text-center">
            <span class="text-3xl mb-2 block">🔧</span>
            <p class="font-medium text-gray-900">工作台</p>
            <p class="text-sm text-gray-500">编辑管理文章</p>
          </div>
        </a>
        
        <a href="/test" class="block p-4 border border-gray-300 rounded-lg hover:border-green-500 hover:shadow-md transition-all">
          <div class="text-center">
            <span class="text-3xl mb-2 block">🧪</span>
            <p class="font-medium text-gray-900">RSS测试</p>
            <p class="text-sm text-gray-500">测试RSS源</p>
          </div>
        </a>
        
        <a href="/test-claude" class="block p-4 border border-gray-300 rounded-lg hover:border-purple-500 hover:shadow-md transition-all">
          <div class="text-center">
            <span class="text-3xl mb-2 block">🤖</span>
            <p class="font-medium text-gray-900">AI测试</p>
            <p class="text-sm text-gray-500">Claude AI功能</p>
          </div>
        </a>
        
        <button id="refresh-stats" class="p-4 border border-gray-300 rounded-lg hover:border-orange-500 hover:shadow-md transition-all">
          <div class="text-center">
            <span class="text-3xl mb-2 block">🔄</span>
            <p class="font-medium text-gray-900">刷新数据</p>
            <p class="text-sm text-gray-500">更新统计</p>
          </div>
        </button>
      </div>
    </div>

  </div>

  <!-- JavaScript -->
  <script>
    // 刷新统计数据
    document.getElementById('refresh-stats')?.addEventListener('click', async () => {
      const button = document.getElementById('refresh-stats')
      if (button) {
        button.innerHTML = '<div class="text-center"><span class="text-3xl mb-2 block">⏳</span><p class="font-medium text-gray-900">刷新中...</p></div>'
      }
      
      setTimeout(() => {
        window.location.reload()
      }, 1000)
    })
  </script>

  <style>
    .line-clamp-2 {
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }
    
    .transition-all {
      transition: all 0.2s ease-in-out;
    }
    
    .hover\:shadow-md:hover {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
  </style>
</Layout>